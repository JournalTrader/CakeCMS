<?xml version="1.0" encoding="UTF-8" ?>
<module>
    <name>Manager block</name>
    <description>Permet la création et la gestion d'emplacements à insérer dans les layouts.</description>
    <version>1.0.0</version>
    <author>MORICET Nicolas</author>
    <site>Mon super CMS</site>
    <url>http://www.cms.com</url>
    <plugins>
        <plugin main="true" active="true">
            <name>Manager Blocks</name>
            <prefix>manager</prefix>
            <plugin_name>block</plugin_name>
            <controller>block</controller>
            <action>index</action>
        </plugin>
    </plugins>
    <database>
        <table>
            <model>Block</model>
            <default>
                <data>
                    <name>Menu manager</name>
                    <type>menu</type>
                </data>
                <data>
                    <name>Menu public</name>
                    <type>menu</type>
                </data>
                <data>
                    <name>Element droit</name>
                    <type>element</type>
                </data>
            </default>
        </table>
    </database>
</module>