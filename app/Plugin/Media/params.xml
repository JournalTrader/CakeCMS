<?xml version="1.0" encoding="UTF-8" ?>
<module>
    <name>Media manager</name>
    <description>Permet de gérer les médias.</description>
    <version>1.0.0</version>
    <author>MORICET Nicolas</author>
    <site>Mon super CMS</site>
    <url>http://www.cms.com</url>
    <plugins>
        <plugin main="true" active="true">
            <name>Media Index</name>
            <prefix>manager</prefix>
            <plugin_name>media</plugin_name>
            <controller>media</controller>
            <action>index</action>
        </plugin>
        <plugin active="true">
            <name>Media add</name>
            <prefix>manager</prefix>
            <plugin_name>media</plugin_name>
            <controller>media</controller>
            <action>add</action>
        </plugin>
    </plugins>
</module>